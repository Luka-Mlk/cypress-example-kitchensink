{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": ["business/components/index.ts"],
      "@pages": ["business/pages/index.ts"],
      "@fixtures": ["business/fixtures/index.ts"],
      "@infra": ["infra/index.ts"]
    },
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "target": "esnext",
    "types": ["node"],
    "lib": ["esnext", "DOM"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
